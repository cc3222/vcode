            <li class="nav-item">
              <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Inicio de Sesion</a>
            </li>

          </ul>
        </div>
      </div>
    </nav>

    <!-- Modal -->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
      aria-labelledby="staticBackdropLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="staticBackdropLabel">Iniciar Sesion</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form action="usuarios-inicio-sesion-get" method="post">
              
              <div class="form-group">
                <label for="">correo electronico</label>
                <input type="email" name="email" id="" class="form-control" placeholder="ejem: ejemplo@gmail.com"
                  aria-describedby="helpId">
              </div>

              <div class="t-1 form-group">
                <label for="">contraseña</label>
                <input type="password" name="contraseña" id="" class="form-control" placeholder="*********"
                  aria-describedby="helpId">
              </div>
              <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary m-1">Ingresar</button>
                <a href="usuarios-registro" class="btn btn-primary m-1"> crear Cuenta</a>
              </div>
            </form>
          </div>

        </div>
      </div>
    </div>